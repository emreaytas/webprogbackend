{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=WebProgBackend;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "AllowedHosts": "*",

  "AdminSettings": {
    "DefaultAdminUserName": "admin",
    "DefaultAdminEmail": "admin@example.com",
    "DefaultAdminPassword": "Admin123!"
  },

  "JwtSettings": {
    "SecretKey": "dfb-d*-dfb*sdfb-sd*bsd-bd*sfbsdfbsdfb-afb*ab*ba-ba*gasdfa",
    "Issuer": "webprogbackend",
    "Audience": "webprogbackend",
    "ExpirationInMinutes": 60
  },

  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 52428800
    },
    "EndPoints": {
      "HttpsInlineCertFile": {
        "Url": "https://localhost:7062"
      }
    }
  },

  "IISServerOptions": {
    "MaxRequestBodySize": 104857600
  },

  "EncryptionSettings": {
    "AESKey": "MySecretKey000000000000000000000",
    "AESIV": "IV16ByteLength!?"
  },
  "PythonSettings": {
    "PythonPath": "python"
  },
  "AnonService": {
    "ApiUrl": "http://localhost:5000",
    "Timeout": 300,
    "AnonymizeFaces": true,
    "AnonymizeNames": true,
    "AnonymizeInstitutions": true
  },
  "LetterReplacerService": {
    "ApiUrl": "http://localhost:5000/api/pdf/replace-letters"
  },
  "Stripe": {
    "SecretKey": "your-stripe-secret-key",
    "PublishableKey": "your-stripe-publishable-key"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://localhost:3000",
      "https://localhost:5173"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
    "AllowedHeaders": [
      "Authorization",
      "Content-Type",
      "Accept",
      "Origin",
      "X-Requested-With"
    ],
    "ExposedHeaders": [ "X-Pagination", "X-Total-Count" ],
    "ApiGatewayOrigin": "http://localhost:5000",
    "FrontendOrigin": "http://localhost:3000"
  },
  "DeepSeek": {
    "ApiKey": "your-deepseek-api-key-here",
    "BaseUrl": "https://api.deepseek.com",
    "DefaultModel": "deepseek-chat",
    "Timeout": 30000,
    "MaxRetries": 3
  }
}
